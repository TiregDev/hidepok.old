<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.hi_depok.hi_depok.Activity_Main.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="35dp"
                    android:paddingEnd="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:onClick="event"
                    android:src="@drawable/notification" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.49"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:paddingTop="15dp"
                            android:text="@string/app_name"
                            android:textColor="#6B92CB"
                            android:textSize="36sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|center_vertical|center_horizontal"
                            android:text="@string/tag_app_name"
                            android:textColor="#F6981A"
                            android:textSize="20sp"
                            android:textStyle="normal|italic" />

                        <Button
                            android:id="@+id/wv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|fill"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="10dp"
                            android:onClick="linktoyoutube"
                            android:alpha="0.7"
                            android:background="@drawable/shape2"
                            android:drawableStart="@drawable/ic_action_play_circle_filled"
                            android:fontFamily="sans-serif-condensed"
                            android:minHeight="0dp"
                            android:text="@string/video"
                            android:textAllCaps="false"
                            android:textColor="#b7b7b7"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="Pilih modul yang ingin dijalankan!"
                    android:textColor="#b7b7b7" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.8">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sikepok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/shape2"
                        android:drawableStart="@mipmap/sikepok"
                        android:onClick="linkSikepok"
                        android:text="SiKepok"
                        android:textAllCaps="false"
                        android:textColor="#b7b7b7" />

                    <Button
                        android:id="@+id/kadepok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/shape2"
                        android:drawableStart="@mipmap/kadepok"
                        android:onClick="linkkadepok"
                        android:text="KaDepok"
                        android:textAllCaps="false"
                        android:textColor="#b7b7b7" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/lapok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/shape2"
                        android:drawableStart="@mipmap/lapok"
                        android:onClick="linklapok"
                        android:text="Lapok"
                        android:textAllCaps="false"
                        android:textColor="#b7b7b7" />

                    <Button
                        android:id="@+id/kapok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/shape2"
                        android:drawableStart="@mipmap/kapok"
                        android:onClick="linkkapok"
                        android:text="Kapok"
                        android:textAllCaps="false"
                        android:textColor="#b7b7b7" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/ucok"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/shape2"
                        android:drawableStart="@mipmap/ucok"
                        android:onClick="linkucok"
                        android:text="Ucok"
                        android:textAllCaps="false"
                        android:textColor="#b7b7b7" />

                    <Button
                        android:id="@+id/fokopok"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:background="@drawable/shape2"
                        android:drawableStart="@drawable/fokopok_2"
                        android:onClick="linkfokopok"
                        android:text="Fokopok"
                        android:textAllCaps="false"
                        android:textColor="#b7b7b7" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>