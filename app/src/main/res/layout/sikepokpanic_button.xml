<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_centerInParent="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Layanan Gawat Darurat"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:font="@string/fontBold" />

        <ImageView
            android:id="@+id/callbtn"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/call_btn" />

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:id="@+id/text112"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/callbtn"
            android:gravity="center"
            android:text="112"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold"
            app:font="@string/fontBold" />

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/text112"
            android:gravity="bottom|center"
            android:text="Tekan untuk menelepon"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:font="@string/fontBold" />

    </RelativeLayout>
</LinearLayout>