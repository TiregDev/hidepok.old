<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/image_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="-10dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/image_slide"
                            android:layout_marginStart="0dp"/>

                        <LinearLayout
                            android:id="@+id/gambar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/image_thumbnail"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:textSize="@dimen/article_desc"
                android:id="@+id/tlpn_panti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView30"
                android:layout_alignStart="@+id/pengurus_panti"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/pengurus_panti"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView29"
                android:layout_centerHorizontal="true"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_jmlh_anak"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_telepon"
                android:layout_below="@+id/text_telepon"
                android:layout_marginTop="20dp"
                android:text="Jumlah Anak "
                android:textColor="#fff"
                app:font="@string/fontReguler" />


            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView30"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_jmlh_anak"
                android:layout_alignStart="@+id/textView29"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_above="@+id/desc_panti"
                android:layout_alignBaseline="@+id/text_thn_berdiri"
                android:layout_alignStart="@+id/textView31"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_thn_berdiri"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_jmlh_anak"
                android:layout_below="@+id/text_jmlh_anak"
                android:layout_marginTop="28dp"
                android:text="Tahun Berdiri"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_alamat_panti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_alignStart="@+id/text_thn_berdiri"
                android:layout_below="@+id/text_thn_berdiri"
                android:layout_marginTop="28dp"
                android:text="Alamat Panti"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_alamat_panti"
                android:layout_alignBottom="@+id/text_alamat_panti"
                android:layout_alignStart="@+id/textView32"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />


            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_email_panti"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_alamat_panti"
                android:layout_below="@+id/text_alamat_panti"
                android:layout_marginTop="28dp"
                android:text="Email"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_above="@+id/desc_panti"
                android:layout_alignBaseline="@+id/text_email_panti"
                android:layout_alignStart="@+id/textView31"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_rekening_panti"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_email_panti"
                android:layout_below="@+id/text_email_panti"
                android:layout_marginTop="28dp"
                android:text="Rekening"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_above="@+id/desc_panti"
                android:layout_alignBaseline="@+id/text_rekening_panti"
                android:layout_alignStart="@+id/textView31"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/desc_panti"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_rekening_panti"
                android:layout_marginTop="40dp"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />


            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView36"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/jmlh_anak_panti"
                android:layout_alignStart="@+id/jmlh_anak_panti"
                android:layout_marginStart="30dp"
                android:text="Anak"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/thn_berdiri"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/desc_panti"
                android:layout_alignBaseline="@+id/text_thn_berdiri"
                android:layout_alignStart="@+id/jmlh_anak_panti"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_pengurus"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Pengurus"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView31"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_jmlh_anak"
                android:layout_alignBottom="@+id/text_jmlh_anak"
                android:layout_alignStart="@+id/textView30"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/text_telepon"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_pengurus"
                android:layout_below="@+id/text_pengurus"
                android:layout_marginTop="18dp"
                android:text="No. Telepon"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/textView29"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/text_jmlh_anak"
                android:text=":"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/jmlh_anak_panti"
                android:layout_width="wrap_content"
                android:textSize="@dimen/article_desc"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView31"
                android:layout_alignStart="@+id/tlpn_panti"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />


            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/alamat_panti"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_alamat_panti"
                android:layout_alignStart="@+id/thn_berdiri"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/email_panti"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_email_panti"
                android:layout_alignStart="@+id/alamat_panti"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/rekening_panti"
                android:textSize="@dimen/article_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_rekening_panti"
                android:layout_alignStart="@+id/email_panti"
                android:text="@string/spasi"
                android:textColor="#fff"
                app:font="@string/fontReguler" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>