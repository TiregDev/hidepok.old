<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:background="@drawable/shape_bg_list"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:src="@android:drawable/ic_delete" />

    <fr.arnaudguyon.smartfontslib.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:text="Filter Berdasarkan"
        android:textColor="@color/background"
        android:textSize="@dimen/article_subheading"
        app:font="@string/fontReguler" />

    <LinearLayout
        android:id="@+id/dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Spinner
            android:id="@+id/category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/sortby"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <fr.arnaudguyon.smartfontslib.FontButton
            android:id="@+id/temukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.3"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape2"
            android:text="Temukan"
            android:textColor="@color/white"
            app:font="@string/fontReguler" />

        <fr.arnaudguyon.smartfontslib.FontButton
            android:id="@+id/temukan_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape2"
            android:text="Tampilkan Semua"
            android:textColor="@color/white"
            app:font="@string/fontReguler" />

    </LinearLayout>

</LinearLayout>