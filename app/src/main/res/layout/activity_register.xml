<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/bg_kota_depok">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:background="@drawable/shape_login"
                    android:paddingBottom="50dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:paddingTop="20dp"
                    app:font="@string/fontBold"
                    android:layout_centerInParent="true"/>

                <View
                    android:id="@+id/list_view"
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="140dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:font="@string/fontReguler"
                    android:text="S   I   G   N   U   P"
                    android:layout_below="@id/list_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFEFD"
                android:padding="25dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        android:id="@+id/nama_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap"
                        android:inputType="text"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/abuAbu"
                        app:font="@string/fontReguler" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        android:id="@+id/email_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/abuAbu"
                        app:font="@string/fontReguler" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:inputType="text"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/abuAbu"
                        app:font="@string/fontReguler" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kata Sandi"
                        android:inputType="textPassword"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/abuAbu"
                        app:font="@string/fontReguler" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fr.arnaudguyon.smartfontslib.FontEditText
                        android:id="@+id/cekPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Konfirmasi Kata Sandi"
                        android:inputType="textPassword"
                        android:textColor="@color/orange"
                        android:textColorHint="@color/abuAbu"
                        app:font="@string/fontReguler" />

                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <fr.arnaudguyon.smartfontslib.FontEditText
                            android:id="@+id/tempat_lahir"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:hint="Tempat Lahir"
                            android:inputType="text"
                            android:textColor="@color/orange"
                            android:textColorHint="@color/abuAbu"
                            app:font="@string/fontReguler" />
                    </android.support.design.widget.TextInputLayout>

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        android:id="@+id/tanggal_lahir"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape5"
                        android:gravity="center_vertical|center_horizontal"
                        android:padding="10dp"
                        android:text="Tanggal Lahir"
                        android:textColor="@color/white"
                        android:textSize="8pt"
                        app:font="@string/fontReguler" />
                </RelativeLayout>

                <fr.arnaudguyon.smartfontslib.FontButton
                    android:id="@+id/btnRegister"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape3"
                    android:text="DAFTAR"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    app:font="@string/fontBold" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/txtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Sudah punya akun? Masuk aja!"
                    android:textColor="@color/background"
                    android:textSize="8pt"
                    app:font="@string/fontReguler" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>