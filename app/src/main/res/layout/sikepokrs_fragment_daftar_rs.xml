<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape4"
        android:alpha="0.8"
        android:orientation="horizontal"
        android:padding="5dp"
        android:textColor="#b7b7b7"
        android:weightSum="5">

        <ImageView
            android:id="@+id/gambarRS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_weight="4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:weightSum="2"
            android:orientation="vertical">

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/namaRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/gambarRS"
                android:text="@string/namaRS"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="@color/white"
                app:font="@string/fontBold" />

            <fr.arnaudguyon.smartfontslib.FontTextView
                android:id="@+id/alamatRS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaRS"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/gambarRS"
                android:text="@string/alamat"
                android:singleLine="true"
                android:textColor="@color/white"
                android:layout_weight="1"
                app:font="@string/fontReguler" />
        </LinearLayout>

