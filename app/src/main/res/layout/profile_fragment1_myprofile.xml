<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:id="@+id/namauser"
            app:font="@string/fontReguler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spasi"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="#F3A111"
            android:textSize="@dimen/article_titles"
            android:gravity="center"/>

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:id="@+id/ttl"
            app:font="@string/fontLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/spasi"
            android:textColor="@color/white"
            android:layout_below="@id/namauser"
            android:background="#F3A111"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:paddingBottom="5dp"/>

        <fr.arnaudguyon.smartfontslib.FontTextView
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="@string/fontLightItalic"
            android:background="#F3A111"
            android:textColor="@color/white"
            android:layout_below="@id/ttl"
            android:text="@string/spasi"
            android:gravity="center"
            android:paddingBottom="10dp"/>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/join"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/mail_2" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/emailuser"
                    app:font="@string/fontReguler"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/background"
                    android:text="@string/spasi" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/call_small" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/notelpuser"
                    app:font="@string/fontReguler"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/background"
                    android:text="@string/spasi" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/maps_small" />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:id="@+id/alamatuser"
                    app:font="@string/fontReguler"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/background"
                    android:text="@string/spasi" />

            </TableRow>

        </TableLayout>

    </RelativeLayout>

</ScrollView>